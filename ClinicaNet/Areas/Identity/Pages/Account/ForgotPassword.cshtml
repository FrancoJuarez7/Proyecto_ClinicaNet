@page
@model ForgotPasswordModel

<div class="fondo-recuperar-contrasenia">

        <h1 class="text-black">Recupera tu contraseña</h1>
        <h2 class="text-black">Ingrese su correo</h2>

        <form method="post" class="estilo-form-recupero-contrasenia">

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <button type="submit" class="w-100 btn btn-lg btn-primary">Recuperar contraseña</button>

        </form>
 
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

