@model ClinicaNet.Models.Afiliado

@{
    ViewData["Title"] = "Delete";
}

<div class="fondo-interior-app">

    <h1 class="text-shadow">ELIMINAR AFILIADO</h1>

    <div class="estilo-form-interior form-grande">
        <h3>¿Estás seguro de que quieres eliminar el afiliado?</h3>
        <hr />

        <dl class="row">

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Nombre):
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Nombre)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Apellido):
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Apellido)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.DNI):
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.DNI)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.FechaNacimiento):
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.FechaNacimiento)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.NombreFoto):
            </dt>
            <dd class="col-sm-8">
                @if (!string.IsNullOrEmpty(Model.NombreFoto))
                {
                    <img src="~/images/fotos/@Model.NombreFoto" width="60" asp-append-version="true" />
                }
                else
                {
                    <p>No se ha cargado una foto</p>
                }
            </dd>
        </dl>

    
        <form asp-action="Delete" class="mt-3 d-flex gap-2">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar" class="btn btn-danger" /> 
            <a asp-action="Index" class="btn btn-info">Volver al registro</a>
        </form>
    </div>
</div>