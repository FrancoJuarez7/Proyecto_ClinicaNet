@model ClinicaNet.Models.Afiliado

@{
    ViewData["Title"] = "Details";
}

<div class="fondo-interior-app">

    <h1 class="text-shadow">DETALLES DEL AFILIADO</h1>
    <hr />

    <div class="estilo-form-interior form-chico">

         <dl class="row">
             <dt class="col-sm-7">
                 @Html.DisplayNameFor(model => model.Nombre):
             </dt>
             <dd class="col-sm-5">
                 @Html.DisplayFor(model => model.Nombre)
             </dd>
             <dt class="col-sm-7">
                 @Html.DisplayNameFor(model => model.Apellido):
             </dt>
             <dd class="col-sm-5">
                 @Html.DisplayFor(model => model.Apellido)
             </dd>
             <dt class="col-sm-7">
                 @Html.DisplayNameFor(model => model.DNI):
             </dt>
             <dd class="col-sm-5">
                 @Html.DisplayFor(model => model.DNI)
             </dd>
             <dt class="col-sm-7">
                 @Html.DisplayNameFor(model => model.FechaNacimiento):
             </dt>
             <dd class="col-sm-5">
                 @Html.DisplayFor(model => model.FechaNacimiento)
             </dd>
             <dt class="col-sm-7">
                 @Html.DisplayNameFor(model => model.NombreFoto):
             </dt>
             <dd class="col-sm-5">
                @if (!string.IsNullOrEmpty(@Model.NombreFoto))
                {
                    <img src="~/images/fotos/@Model.NombreFoto" width="60" asp-append-version="true" />
                }
                else
                {
                    <p>No se ha cargado foto</p>
                }
                </dd>
            </dl>

        <div class="mt-3 d-flex gap-2">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
            <a class="btn btn-info" asp-action="Index">Volver al listado</a>
        </div>

    </div>
</div>