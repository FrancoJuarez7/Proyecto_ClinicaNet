@model ClinicaNet.ViewModel.TicketsDetailsViewModel

@{
    ViewData["Title"] = "Detalle del Ticket";
}

<div class="fondo-interior-app">
    <h1 class="text-shadow">DETALLE TICKET</h1>
    <hr />

    <div class="estilo-form-interior form-chico">
        
        <dl class="row">

            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.AfiliadoNombreCompleto):
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.AfiliadoNombreCompleto)
            </dd>

            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.FechaSolicitud):
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.FechaSolicitud)
            </dd>

            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.Observacion):
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Observacion)
            </dd>

            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.NombreFoto):
            </dt>
            <dd class="col-sm-6">

                @if (!string.IsNullOrEmpty(Model.NombreFoto))
                {
                    <img src="~/images/fotos/@Model.NombreFoto" width="60" asp-append-version="true" />
                }
                else
                {
                    <p>No se ha cargado foto</p>
                }
            </dd>

        </dl>

        <div class="mt-3 d-flex gap-2">
            <a class="btn btn-primary" asp-controller="TicketsDetalles" asp-action="Edit" asp-route-id="@Model.TicketId">Editar</a>
            <a class="btn btn-info" asp-action="Index">Volver al listado</a>
        </div> 

    </div>

</div>